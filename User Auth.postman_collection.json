		{
			"name": "login",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let resText = pm.response.text();\r",
							"let json = {};\r",
							"try { json = pm.response.json(); } catch (e) {}\r",
							"\r",
							"pm.environment.set(\"accessToken\", json.access_token);\r",
							"\r",
							"// 1. Kiểm tra có access_token\r",
							"pm.test(\"Có access_token trả về\", () => {\r",
							"    pm.expect(json).to.have.property(\"access_token\");\r",
							"});\r",
							"\r",
							"// 2. Kiểm tra token_type\r",
							"pm.test(\"token_type là bearer\", () => {\r",
							"    pm.expect(json.token_type).to.eql(\"bearer\");\r",
							"});\r",
							"\r",
							"// 3. (Tùy) Kiểm tra expires_in > 0\r",
							"pm.test(\"expires_in > 0\", () => {\r",
							"    pm.expect(json.expires_in).to.be.a(\"number\").and.to.be.above(0);\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {}
					}
