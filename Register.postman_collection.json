	},
	"item": [
		{
			"name": "register",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"let code = pm.response.code;\r",
							"let json = null;\r",
							"let isJson = true;\r",
							"try {\r",
							"  json = pm.response.json();\r",
							"} catch (e) {\r",
							"  isJson = false;\r",
							"  json = {};\r",
							"}\r",
							"\r",
							"// 1. Thành công (201)\r",
							"if (code === 201) {\r",
							"  pm.test(\"Đăng ký thành công (status 201)\", () => {\r",
							"    pm.response.to.have.status(201);\r",
							"  });\r",
							"  pm.test(\"Có trường id hoặc user\", () => {\r",
							"    pm.expect(json).to.have.any.keys(\"id\", \"user\");\r",
							"  });\r",
							"}\r",
							"\r",
							"// 2. Lỗi hợp lệ (400, 409, 422)\r",
							"else if ([400, 409, 422].includes(code)) {\r",
							"  pm.test(\"Đăng ký lỗi hợp lệ (400/409/422)\", () => {\r",
							"    pm.expect([400, 409, 422]).to.include(code);\r",
							"  });\r",
							"  pm.test(\"Lỗi trả về phải có message hoặc error\", () => {\r",
							"    if (isJson) {\r",
							"      pm.expect(json).to.have.any.keys(\"message\", \"error\");\r",
							"    } else {\r",
							"      pm.expect(pm.response.text().length).to.be.above(0);\r",
							"    }\r",
							"  });\r",
							"}\r",
							"\r",
							"// 3. Lỗi bất thường khác\r",
							"else {\r",
							"  pm.test(\"Status code không mong đợi!\", () => {\r",
							"    pm.expect.fail(`Unexpected status code: ${code}. Body: ${pm.response.text()}`);\r",
							"  });\r",
							"}\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "raw",
					"raw": "{\r\n  \"first_name\": \"{{first_name}}\",\r\n  \"last_name\": \"{{last_name}}\",\r\n  \"address\": \"{{address}}\",\r\n  \"city\": \"{{city}}\",\r\n  \"state\": \"{{state}}\",\r\n  \"country\": \"{{country}}\",\r\n  \"postcode\": \"{{postcode}}\",\r\n  \"phone\": \"{{phone}}\",\r\n  \"dob\": \"{{dob}}\",\r\n  \"email\": \"{{email}}\",\r\n  \"password\": \"{{password}}\"\r\n}\r\n",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/users/register",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"users",
						"register"
					]
				}
			},
			"response": []
		}
	]
}
